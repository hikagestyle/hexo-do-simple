<!DOCTYPE html>
<html lang="<%=config.language%>">

<%
var pageTitle = page.title || config.subtitle || '';
if (is_archive()) pageTitle = 'Archives';
if (is_tag()) pageTitle = 'Tag: ' + page.tag + ': ' + page.current;
if (is_category()) pageTitle = 'Category: ' + page.category + ': ' + page.current;
if (is_month()) pageTitle += ': ' + page.year + '/' + page.month + ': ' + page.current;
pageTitle += ' [ ' + config.title + ' ]';
%>

<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<% if (is_home()) { %>
<title><%=config.title%></title>
<% } else { %>
<title><%=pageTitle%></title>
<% } %>

<link rel="stylesheet" href="https://unpkg.com/purecss@2.1.0/build/pure-min.css">
<link rel="stylesheet" href="https://unpkg.com/purecss@2.1.0/build/grids-responsive-min.css">

<%- css('/css/style.css') %>

<link rel="icon" href="/img/favicon.ico" type="image/png">
<link rel="icon" href="/img/apple-touch-icon.png" type="image/png">
<link rel="icon" href="/img/android-chrome-192x192.png" type="image/png">

<!-- <%- feed_tag('atom.xml') %> -->
<%-partial('partials/_analytics')%>

</head>

<% if (is_home()) { %>
<body class="home">
<% } else if(is_post()){ %>
<body class="post">
<% } else if(is_archive()){ %>
<body class="archive">
<% } else if(page.layout === "404") { %>
<body class="404">
<% } else { %>
<body class="page">
<% } %>

<div id="layout" class="pure-g">

  <main id="main" class="pure-u-1 pure-u-md-1 pure-u-lg-5-8">


<header>
<div class="site-title"><a href="<%=config.root%>"><%=config.title%></a></div>
<p class="site-description"><%=config.description%></p>
</header>

<div class="site-img"><img src="/img/site-img.jpg" alt="<%=config.title%>"></div>

<nav class="menu">
<% Object.keys(theme.menu).forEach(key => { %>
<a class="pure-button" href="<%=theme.menu[key]%>"><%=key%></a>
<% }); %>
</nav>


<div class="content">
<%- body %>
</div><!-- /.content -->


  </main><!-- /main -->


	<aside id="side" class="pure-u-1 pure-u-md-1 pure-u-lg-3-8">

<div class="section">
<h2>サイドバー</h2>

<ul>
<% Object.keys(theme.sidemenu).forEach(key => { %>
<li><a href="<%=theme.sidemenu[key]%>"><%=key%></a></li>
<% }); %>
</ul>
</div>


<div class="section">
<h2>リンク SSG</h2>

<ul>
	<li><a href="https://www.getzola.org/" target="_blank" rel="nofollow noopener noreferrer">Zola</a></li>

	<li><a href="https://gohugo.io/" target="_blank" rel="nofollow noopener noreferrer">Hugo</a></li>

	<li><a href="https://hexo.io/" target="_blank" rel="nofollow noopener noreferrer">Hexo</a></li>

	<li><a href="https://nodejs.org/ja/" target="_blank" rel="nofollow noopener noreferrer">Node.js</a></li>

	<li><a href="https://github.com/nodesource/distributions" target="_blank" rel="nofollow noopener noreferrer">Node.js(GitHub)</a></li>
</ul>
</div>


<div class="section">
<h2>リンク Tools</h2>

<ul>
	<li><a href="https://type-scale.com/" target="_blank" rel="nofollow noopener noreferrer">Type Scale</a></li>

	<li><a href="https://lighthouse-metrics.com/" target="_blank" rel="nofollow noopener noreferrer">Lighthouse</a></li>

	<li><a href="https://developers.google.com/speed/pagespeed/insights/" target="_blank" rel="nofollow noopener noreferrer">PageSpeed Insights</a></li>

	<li><a href="http://www.htmllint.net/html-lint/htmllint.html" target="_blank" rel="nofollow noopener noreferrer">Another HTML Lint - Gateway</a></li>

	<li><a href="https://necolas.github.io/normalize.css/" target="_blank" rel="nofollow noopener noreferrer">Normalize.css</a></li>

	<li><a href="https://cdnjs.com/" target="_blank" rel="nofollow noopener noreferrer">cdnjs.com</a></li>

	<li><a href="https://jquery.com/" target="_blank" rel="nofollow noopener noreferrer">jQuery</a></li>

	<li><a href="https://veno.es/venobox/" target="_blank" rel="nofollow noopener noreferrer">VenoBox 2</a></li>

