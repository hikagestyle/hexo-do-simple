	var delaycss = document.createElement('link');
	delaycss.rel = 'stylesheet';
	delaycss.href = 'https://cdnjs.cloudflare.com/ajax/libs/venobox/2.0.4/venobox.min.css';
	document.head.appendChild(delaycss);
